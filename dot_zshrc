# Terminal type
export TERM=xterm-256color

# Path configuration
export PATH=$HOME/bin:$HOME/.local/bin:/usr/local/bin:$PATH

# Path to Oh My Zsh installation
export ZSH="$HOME/.oh-my-zsh"

# Theme
ZSH_THEME="robbyrussell"

# Plugins
# Note: zsh-autosuggestions and zsh-syntax-highlighting must be installed:
# git clone https://github.com/zsh-users/zsh-autosuggestions ${ZSH_CUSTOM:-~/.oh-my-zsh/custom}/plugins/zsh-autosuggestions
# git clone https://github.com/zsh-users/zsh-syntax-highlighting ${ZSH_CUSTOM:-~/.oh-my-zsh/custom}/plugins/zsh-syntax-highlighting
plugins=(
    git
    zsh-autosuggestions
    zsh-syntax-highlighting
)

source $ZSH/oh-my-zsh.sh

# User configuration

# Editor
export EDITOR='nvim'
export VISUAL='nvim'

# History settings
HISTSIZE=10000
SAVEHIST=10000
setopt SHARE_HISTORY
setopt HIST_IGNORE_DUPS
setopt HIST_IGNORE_SPACE

# Aliases
alias v='nvim'
alias vim='nvim'
alias c='clear'
alias ll='ls -la'
alias la='ls -A'
alias l='ls -CF'
alias ..='cd ..'
alias ...='cd ../..'

# Git aliases (in addition to oh-my-zsh git plugin)
alias gs='git status'
alias gd='git diff'
alias glog='git log --oneline --graph --decorate'

# System aliases
alias update='sudo pacman -Syu'
alias cleanup='sudo pacman -Rns $(pacman -Qdtq)'
alias pacs='pacman -Ss'
alias paci='sudo pacman -S'

# Hyprland aliases
alias hc='nvim ~/.config/hypr/hyprland.conf'
alias hr='hyprctl reload'

# Theme aliases (pywal)
alias theme='~/.local/bin/wal-set.sh'
alias theme-reload='~/.local/bin/wal-reload.sh'

# Waybar aliases
alias wbc='nvim ~/.config/waybar/config.jsonc'
alias wbs='nvim ~/.config/waybar/style.css'
alias reload-waybar='pkill waybar; waybar &'

# Load pywal colors in new terminals
[[ -f ~/.cache/wal/sequences ]] && cat ~/.cache/wal/sequences
